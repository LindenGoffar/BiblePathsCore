@page
@model BiblePathsCore.EditCommentModel

@{
    ViewData["Title"] = "Edit a Step";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"]: @Model.Path.Name</h4>

<div class="container-fluid">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12">
            <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <span asp-validation-for="Step.Text" class="text-danger"></span>
                        <textarea asp-for="Step.Text" rows="8" placeholder="Owner Commentary" class="scroll-box" maxlength='2048' id="OwnerComment"> </textarea>
                        <input type="hidden" asp-for="Step.PathId" />
                        <input type="hidden" asp-for="Step.Position" />
                        <div class="small" id="CharCountMsg"></div>
                        <input type="submit" value="Add Step" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>

<div>
    <hr />
    <a asp-page="/CommentedPaths/Steps" asp-route-PathId="@Model.Path.Id">Back to Commented Path</a>
</div>

@section Scripts {
    <partial name="_CharCountHelper" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
