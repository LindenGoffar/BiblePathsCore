<script>
    // Let's expand any select elements with Value > 0
    document.addEventListener('DOMContentLoaded', function () {
        // Iterate through Items 1 = 9 checking whether a BookSelect value exists.
        for (let i = 1; i <= 9; i++) {
            let bookSelect = document.getElementById("BookSelect-" + i);
            let bookNum = parseInt(bookSelect.value);
            if (bookNum > 0) {
                document.getElementById("AddBook-" + i).style.display = 'block';
                if (i == 9) {
                    document.getElementById("AddAnotherButton").style.display = 'none';
                }
            } else {
                document.getElementById("AddBook-" + i).style.display = 'none';
            }
        }
    });

    function AddAnother() {
        let anotherAdded = false;
        for (let i = 1; i <= 9; i++) {
            let bookSelect = document.getElementById("BookSelect-" + i);
            let bookNum = parseInt(bookSelect.value);
            if (bookNum == 0 && !anotherAdded) {
                document.getElementById("AddBook-" + i).style.display = 'block';
                if (i == 9) {
                    document.getElementById("AddAnotherButton").style.display = 'none';
                }
                anotherAdded = true;
                break;
            }
        }
    }
</script>
