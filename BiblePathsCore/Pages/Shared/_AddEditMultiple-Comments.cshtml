<script>
    // Let's expand any select elements with Value > 0
    document.addEventListener('DOMContentLoaded', function () {
        // Iterate through Items 1 = 9 checking whether a Name input value exists.
        for (let i = 1; i <= 9; i++) {
            let nameInput = document.getElementById("Name-" + i);
            if (nameInput.value.length > 0) {
                document.getElementById("AddName-" + i).style.display = 'block';
                if (i == 9) {
                    document.getElementById("AddAnotherButton").style.display = 'none';
                }
            } else {
                document.getElementById("AddName-" + i).style.display = 'none';
            }
        }
    });

    function AddAnother() {
        let anotherAdded = false;
        for (let i = 1; i <= 9; i++) {
            let nameInput = document.getElementById("Name-" + i);
            if (nameInput.value.length == 0 && !anotherAdded) {
                document.getElementById("AddName-" + i).style.display = 'block';
                if (i == 9) {
                    document.getElementById("AddAnotherButton").style.display = 'none';
                }
                anotherAdded = true;
                break;
            }
        }
    }
</script>
