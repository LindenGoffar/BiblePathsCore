<script>
    // Let's expand any select elements with Value > 0
    document.addEventListener('DOMContentLoaded', function () {
        // Iterate through Items 1 to 9 checking whether a BookSelect value exists.
        for (let i = 1; i <= 9; i++) {
            var NameInput = document.getElementById("Name-" + i);
            if (NameInput.value.length > 0) {
                document.getElementById("AddName-" + i).style.display = 'block';
                if (i == 9) {
                    document.getElementById("AddAnotherButton").style.display = 'none';
                }
            } else {
                document.getElementById("AddName-" + i).style.display = 'none';
            }
        }
    });

    function AddAnother() {
        var AnotherAdded = false;
        for (let i = 1; i <= 9; i++) {
            var NameInput = document.getElementById("Name-" + i);
            if (NameInput.value.length == 0 && AnotherAdded == false) {
                document.getElementById("AddName-" + i).style.display = 'block';
                if (i == 9) {
                    document.getElementById("AddAnotherButton").style.display = 'none';
                }
                AnotherAdded = true;
                break;
            }
        }
    }
</script>
