@page
@model BiblePathsCore.Pages.PBE.EditPBEUserModel

@{
    ViewData["Title"] = "PBE User: " + Model.EditUser.Email;
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.EditUser.Id" />
                <div class="form-group input-group">
                    <input type="checkbox" asp-for="@Model.EditUser.IsModerator" id="EditUser_IsModerator"/>
                    <label asp-for="@Model.EditUser.IsModerator"> Moderator</label>
                </div>
                <div class="form-group input-group">
                    <input type="checkbox" asp-for="@Model.EditUser.IsQuestionBuilderLocked" id="EditUser_IsQuestionBuilderLocked"/>
                    <label asp-for="@Model.EditUser.IsQuestionBuilderLocked"> User Blocked From Adding Questions</label>
                </div>
                <div class="form-group input-group">
                    <input type="checkbox" asp-for="@Model.EditUser.IsQuizTakerLocked" id="EditUser_IsQuizTakerLocked"/>
                    <label asp-for="@Model.EditUser.IsQuizTakerLocked"> User Blocked From Hosting a Quiz</label>
                </div>
                <div class="form-group input-group">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <hr />
    <a asp-page="PBEUsers">Back to PBEUsers</a>
    <br />
    <a asp-page="Index">PBE Home</a>
</div>

@section Scripts {
    <partial name="_AddEditMultiple" />
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
