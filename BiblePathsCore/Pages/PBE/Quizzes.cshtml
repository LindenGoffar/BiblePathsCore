@page
@model BiblePathsCore.Pages.PBE.QuizzesModel

@{
    ViewData["Title"] = "My Quizzes";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (Model.UserMessage != null)
{
    <div><span class="bg-light text-primary">@Model.UserMessage</span></div>
}

<div class="container-fluid">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#Quizzes">My Quizzes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#Templates">My Templates</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#BookLists">Book Lists</a>
        </li>
    </ul>
    <br />
    <div class="tab-content">
        <div id="Quizzes" class="container tab-pane active">
            <br />
            <h4>@ViewData["Title"]</h4>
            <a asp-page="AddQuiz" asp-route-BibleId="@Model.BibleId">Add a Quiz</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>Quiz</th>
                        <th>Book/Template</th>
                        <th>Stats</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var quiz in Model.Quizzes)
                    {
                        <tr>
                            <td>
                                <a asp-page="/PBE/Quiz" asp-route-QuizId="@quiz.Id" asp-route-BibleId="@Model.BibleId">@quiz.GroupName</a>
                            </td>
                            <td>@quiz.BookOrTemplateName</td>
                            <td>
                                <span>
                                    Questions Answered - @quiz.QuestionsAsked <br />
                                    Score - @quiz.Percentage%
                                </span>
                            </td>
                            <td>
                                <a asp-page="/PBE/QuizStats" asp-route-BibleId="@Model.BibleId" asp-route-QuizId="@quiz.Id" class="btn btn-outline-primary btn-sm">
                                    Stats
                                </a>
                                <br />
                                <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="modal" data-target="#DeleteModal-@quiz.Id">
                                    Delete
                                </button>
                                <div class="modal fade" id="DeleteModal-@quiz.Id" tabindex="-1" role="dialog" aria-labelledby="Delete Path" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Delete this Quiz?</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p class="font-weight-bold">@quiz.GroupName</p>
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-page="/PBE/DeleteQuiz" method="post">
                                                    <input type="hidden" name="id" value="@quiz.Id" />
                                                    <input type="submit" value="Confirm" class="btn btn-danger" />
                                                </form>
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="Templates" class="container tab-pane fade">
            <br />
            <h4>My Quiz Templates</h4>
            <span class="text-info">
                Quiz Templates allow a host greater control over the books and chapters that questions will be taken from for a quiz. 
                A template serves as a pattern that is repeated throughout the quiz, the more times a book/chapter appear in the template the 
                more times they will appear in a quiz. 
            </span>
            <hr />
            @foreach (var template in Model.Templates)
            {
                <span> @template.QuizName </span><br />
            }
            <hr />
            <a class="btn btn-outline-primary" asp-page="Templates" asp-route-BibleId="@Model.BibleId">Manage Quiz Templates</a>

        </div>
        <div id="BookLists" class="container tab-pane fade">
            <br />
            <h4>Book Lists</h4>
            <span class="text-info">
                Book Lists provide a convenient way to group books together. It is not uncommon for PBE teams to have to learn
                more then one book in a year, Book Lists are used to simplify the management of Quizzes and Templates.
            </span>
            <hr />
            @foreach (var BookList in Model.BookLists)
            {
                <span> @BookList.BookListName </span><br />
            }
            <hr />
            @if (Model.PBEUser.IsModerator)
            {
                <a class="btn btn-outline-primary" asp-page="BookLists" asp-route-BibleId="@Model.BibleId">Manage Book Lists</a>
            }
        </div>
    </div>
</div>
<div>
    <hr />
    <a asp-page="/PBE/Index">Back to PBE Home</a>
</div>