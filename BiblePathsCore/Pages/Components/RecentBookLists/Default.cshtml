@model List<BiblePathsCore.Models.DB.QuizBookList>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<strong>Recent Book Lists</strong>
<br />
@foreach (var item in Model)
{
    <em>@item.BookListName - </em> 
    bool isFirst = true;
    @foreach (var Book in @item.QuizBookListBookMaps)
    {
        if (!isFirst)
        {
            <small>, </small>
        }
        <small>@Book.BookName</small>
        isFirst = false;
    }
    <br />
}
