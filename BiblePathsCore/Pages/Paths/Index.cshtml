@page
@model BiblePathsCore.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>My Paths</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].ComputedRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].Modified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].OwnerBibleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].Topics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].IsPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].IsPublicEditable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].IsDeleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].StepCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paths[0].Reads)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Paths) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComputedRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerBibleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topics)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublicEditable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StepCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reads)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
