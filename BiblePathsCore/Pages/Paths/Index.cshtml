@page
@model BiblePathsCore.IndexModel

@{
    ViewData["Title"] = "Bible Paths";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>

<div class="container-fluid">
    @foreach  (var item in Model.Paths)
    {
    <div class="row">
        <div class="col-6">
            <strong><a asp-page="./steps" asp-route-PathId="@item.Id">@item.Name</a></strong>
            <span> - @item.Topics</span>
        </div>
        <div class="col">
            <small>Length: @item.Length min</small><br />
            <small><strong>Rating: </strong>@item.ComputedRating</small><br />
            <small>Reads: @item.Reads</small>
        </div>
    </div>
    }
</div>

<div>
    <hr />
    <a asp-page="./MyPaths" >Build a Path of your own</a><br />
    <a asp-page="/Index" >Back to Home</a>
</div>